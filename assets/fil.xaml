<Window x:Class="FiveWFiveLGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Five Word Five Letters" Height="250" Width="450">
    
    <Grid>
        <Label Content="Choose a file:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        
        <TextBox Name="FilePathTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Margin="10,35,0,0"/>
        
        <Button Name="BrowseButton" Content="Browse" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="320,35,0,0" Click="BrowseButton_Click"/>
        
        <ProgressBar Name="ProgressBar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="410" Height="20" Margin="10,70,0,0"/>
        
        <Button Name="ProcessButton" Content="Process File" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="10,100,0,0" Click="ProcessFile_Click"/>
        
        <TextBlock Name="OutputTextBlock" Text="Results will appear here..." TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,130,10,0"/>
    </Grid>
</Window>
